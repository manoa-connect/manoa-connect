generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  firstName String?
  lastName  String?
  Profile   Profile?
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition
  owner     String
}

model Chat {
  id        Int      @id @default(autoincrement())
  contactId Int
  owner     String
  isRead    Boolean
  createdAt DateTime @default(now())
  chat      String
  Profile   Profile  @relation(fields: [contactId], references: [id])
}

model Profile {
  id                        Int       @id @default(autoincrement())
  firstName                 String
  lastName                  String
  email                     String    @unique
  description               String
  year                      Year
  major                     String
  likes                     String
  mbti                      String
  commute                   Commute
  current                   String
  previous                  String
  note                      Chat[]
  User                      User      @relation(fields: [email], references: [email])
  Profile_LikesGiven_A      Profile[] @relation("LikesGiven")
  Profile_LikesGiven_B      Profile[] @relation("LikesGiven")
  Profile_MatchedProfiles_A Profile[] @relation("MatchedProfiles")
  Profile_MatchedProfiles_B Profile[] @relation("MatchedProfiles")
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum Commute {
  Dorm
  Commuter
  Other
}

enum Year {
  Freshman
  Sophomore
  Junior
  Senior
  Graduate
}
